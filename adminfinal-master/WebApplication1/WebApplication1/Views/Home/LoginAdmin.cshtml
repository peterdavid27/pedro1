
@{
    ViewBag.Title = "LoginAdmin";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

    <body>
        <h1>Material Login Form</h1>
        <div class=" w3l-login-form">
            <h2>Login Here</h2>
            <form action=" verifyadmin" method="POST">

                <div class=" w3l-form-group">
                    <label>Username:</label>
                    <div class="group">
                        <i class="fas fa-user"></i>
                        <input type="text" name="USUARIO" class="form-control" placeholder="Username" required="required" />
                    </div>
                </div>
                <div class=" w3l-form-group">
                    <label>Password:</label>
                    <div class="group">
                        <i class="fas fa-unlock"></i>
                        <input type="password" name="CLAVE" class="form-control" placeholder="Password" required="required" />
                    </div>
                </div>
                <div class="forgot">
                    <a href="#">Forgot Password?</a>
                    <p><input type="checkbox">Remember Me</p>
                </div>
                <button type="submit">Login</button>
            </form>

        </div>
        <footer>
            <p class="copyright-agileinfo"> &copy; 2018 Material Login Form. All Rights Reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
        </footer>

    </body>